<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    tools:context="com.example.gustavocenci.jogo_da_velha.jogo_da_velha">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/textViewtop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="JOGO DA VELHA"
            android:textSize="30dp"
            android:textColor="#000000"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@android:color/darker_gray">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/modelo2_xml"
            android:tag="quadrado1"
            android:textSize="25dp"
            android:onClick="clickQuadrado"/>


        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/modelo_xml"
            android:tag="quadrado2"
            android:textSize="25dp"
            android:onClick="clickQuadrado"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/modelo2_xml"
            android:tag="quadrado3"
            android:textSize="25dp"
            android:onClick="clickQuadrado"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:background="@android:color/darker_gray">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/modelo_xml"
            android:tag="quadrado4"
            android:textSize="25dp"
            android:onClick="clickQuadrado"/>


        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/modelo2_xml"
            android:tag="quadrado5"
            android:textSize="25dp"
            android:onClick="clickQuadrado"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/modelo_xml"
            android:tag="quadrado6"
            android:textSize="25dp"
            android:onClick="clickQuadrado"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        android:textSize="25dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/modelo2_xml"
            android:tag="quadrado7"
            android:textSize="25dp"
            android:onClick="clickQuadrado"/>


        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/modelo_xml"
            android:tag="quadrado8"
            android:textSize="25dp"
            android:onClick="clickQuadrado"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/modelo2_xml"
            android:tag="quadrado9"
            android:textSize="25dp"
            android:onClick="clickQuadrado"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textSize="25dp"
            android:layout_gravity="center">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:text="Iniciar com X"
                    android:textSize="15dp"/>

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:textSize="15dp"
                    android:text="Iniciar com O" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textSize="25dp"
                android:layout_marginTop="30dp">

            <Button
                android:id="@+id/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="jogar"
                android:text="JOGAR" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textSize="25dp"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/ButtonLimpar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="setView"
                    android:text="LIMPAR" />



            </LinearLayout>

    </LinearLayout>

</LinearLayout>